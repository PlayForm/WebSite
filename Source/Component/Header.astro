---
const Index = Astro.url.pathname === "/" ? "-1" : "";
---

<header class="Header">
	<div class="container flex justify-around">
		<a
			href="/"
			title="PlayForm"
			class="flex content-center items-center justify-center"
			tabindex={Index}>
			<picture>
				<source
					srcset="/Image/PlayForm.svg"
					media="(prefers-color-scheme: light)"
				/>
				<source
					srcset="/Dark/Image/PlayForm.svg"
					media="(prefers-color-scheme: dark)"
				/>
				<img width="21" src="/Image/PlayForm.svg" alt="PlayForm" />
			</picture>
		</a>
	</div>
</header>

<style is:global>
	@import "@Stylesheet/Component/Header.css";
</style>

---
const Index = Astro.url.pathname === "/" ? "-1" : "";

import PlayForm from "@Asset/PlayForm.svg?raw";
import DarkPlayForm from "@Asset/Dark/PlayForm.svg?raw";
---

<header class="Header">
	<div class="container flex justify-start">
		<a
			href="/"
			title="PlayForm"
			class="flex content-center items-center justify-center"
			tabindex={Index}>
			<div class="inline dark:hidden">
				<Fragment set:html={PlayForm} />
			</div>
			<div class="hidden dark:inline">
				<Fragment set:html={DarkPlayForm} />
			</div>
		</a>
	</div>
</header>

<style is:global>
	@import "@Stylesheet/Component/Header.css";
</style>

---
const tabindex = Astro.url.pathname === "/" ? "-1" : "";
---

<header class="header">
	<div class="container flex justify-around">
		<a
			href="/"
			title="Playform"
			class="flex content-center items-center justify-center"
			tabindex={tabindex}>
			<picture>
				<source
					srcset="/Images/logo.png, /Images/logo@2x.png 2x"
					media="(prefers-color-scheme: light)"
				/>
				<source
					srcset="/Images/logo_dark.png, /Images/logo_dark@2x.png 2x"
					media="(prefers-color-scheme: dark)"
				/>
				<img
					width="28"
					src="/Images/logo.png"
					alt="Playform Logo"
					loading="lazy"
				/>
			</picture>
		</a>
	</div>
</header>

<style is:global>
	@import "@Style/components/Header.css";
</style>
